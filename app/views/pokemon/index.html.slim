= paginate(@pokemon)

table.table
  thead
    tr
      th ID
      th Name
      th Type1
      th Type2
  tbody
    - @pokemon.each do |p|
      tr
        - if p.id < 10000
          td= p.id
        - else
          td Alternative Form
        td= link_to p.name, p
        - p.types.each do |type|
          td= type.name
        - if p.types.count < 2
          td

= paginate(@pokemon)